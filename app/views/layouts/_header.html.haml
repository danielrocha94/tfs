%header.navbar.navbar-fixed-top.navbar-inverse
  %div.container
    %nav
      = link_to "Helera", root_path, id: "logo"
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to "Home", root_path
        %li
          = link_to "News", news_path
        %li
          = link_to "Store", store_path
        %li
          = link_to "Search", search_path

        - if logged_in?
          %li
            = link_to "Players", '#'
          %li.dropdown
            %a.dropdown-toggle{ :href => "#", "role" => "button", "data-toggle" => "dropdown", "data-taget" => "#"}
              Account
              %b.caret
            %ul.dropdown-menu{"role" => "menu"}
              %li= link_to "Profile", current_account
              %li= link_to "Settings", "#"
              %li.divider
              %li= link_to "Log out", logout_path, method: "delete"
        - else
          %li
            = link_to "Log In", login_path
